<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="HOME_LOG" value="C:/Ensar-Solutions/JAVA_SpringBoot/property-management/src/main/resources/logs/app.log" />

    <appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_LOG}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>C:/Ensar-Solutions/JAVA_SpringBoot/property-management/src/main/resources/logs/archived/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %c{1} [%t] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE_ROLLING" />
        </root>
    </springProfile>

    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="FILE_ROLLING" />
            <appender-ref ref="STDOUT" />
        </root>
    </springProfile>

    <springProfile name="test | acc | prod">
        <root level="WARN">
            <appender-ref ref="FILE_ROLLING" />
        </root>
    </springProfile>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE_ROLLING" />
    </root>
</configuration>